<div id="progress_bar_container">
	<div class="progress">
		<div class="game-progress-bar progress-bar progress-bar-success"
				 role="progressbar" aria-valuenow="0"
				 aria-valuemin="0" aria-valuemax="100" style="width: 0%">
				<span class="sr-only">0%</span>
		</div>
	</div>
</div>

<div id="palabra" data-word-name="<%= @chosen_word.name %>"
									data-word-id="<%= @chosen_word.id %>"></div>

<form id="freestyle-form">
	<!-- start of level 3 details -->
	<div id="level_3_details">
		<div class="freestyle-instructions"></div>
	</div>
	<!-- end of level 3 details -->

	<br>
	<br>
	<br>
	<!-- start of the semantic map form -->
	<div class="form-group" id="semantic_map_form">
		<label class="sr-only" for="first_semantic_map_input">1.</label>
		<input class="semantic_map_input form-control input-lg" id="first_sem_map_input" name="first_semantic_map_input" type="text" placeholder="1." />
		<br/>
		<label class="sr-only" for="second_semantic_map_input form-control">2.</label>
		<input class="semantic_map_input form-control input-lg" id="second_sem_map_input" name="second_semantic_map_input" type="text" placeholder="2." />
		<br/>
		<label class="sr-only" for="third_semantic_map_input">3.</label>
		<input class="semantic_map_input form-control input-lg" id="third_sem_map_input" name="third_semantic_map_input" type="text" placeholder="3." />
	</div>
	<!-- end of the semantic map form -->

	<!-- start of the word map form -->
	<div class="form-group" id="word_map_form">
		<label class="sr-only" for="first_word_map_input">1.</label>
		<input class="word_map_input form-control input-lg" id="first_word_map_input" name="first_word_map_input" type="text" placeholder="1." />
		<br/>
		<label class="sr-only" for="second_word_map_input form-control">2.</label>
		<input class="word_map_input form-control input-lg" id="second_word_map_input" name="second_word_map_input" type="text" placeholder="2." />
		<br/>
		<label class="sr-only" for="third_word_map_input">3.</label>
		<input class="word_map_input form-control input-lg" id="third_word_map_input" name="third_word_map_input" type="text" placeholder="3." />
	</div>
	<!-- end of the word map form -->

	<!-- start of the definition map form -->
	<div class="form-group" id="definition_map_form">
		<label class="sr-only" for="first_definition_map_input">1.</label>
		<input class="definition_map_input form-control input-lg" id="first_def_map_input" name="first_definition_map_input" type="text" placeholder="1." />
		<br/>
		<label class="sr-only" for="second_definition_map_input form-control">2.</label>
		<input class="definition_map_input form-control input-lg" id="second_def_map_input" name="second_definition_map_input" type="text" placeholder="2." />
		<br/>
		<label class="sr-only" for="third_definition_map_input">3.</label>
		<input class="definition_map_input form-control input-lg" id="third_def_map_input" name="third_definition_map_input" type="text" placeholder="3." />
	</div>
	<!-- end of the definition map form -->

	<!-- start of the sentence form -->
	<div class="form-group" id="sentence_form">
		<label class="sr-only" for="first_sentence_input">1.</label>
		<input class="sentence_input form-control input-lg" id="first_sentence_input" name="first_sentence_input" type="text" placeholder="1." />
		<br/>
		<label class="sr-only" for="second_sentence_input form-control">2.</label>
		<input class="sentence_input form-control input-lg" id="second_sentence_input"  name="second_sentence_input" type="text" placeholder="2." />
		<br/>
		<label class="sr-only" for="third_sentence_input">3.</label>
		<input class="sentence_input form-control input-lg" id="third_sentence_input"  name="third_sentence_input" type="text" placeholder="3." />
	</div>
	<!-- end of the sentence form -->

	<div id="continue_button_container" class="pointer">
		<button type="button" class="btn btn-success btn-block btn-lg" id="semantic_map_continue_button">Continue</button>
		<button type="button" class="btn btn-success btn-block btn-lg" id="word_map_continue_button">Continue</button>
		<button type="button" class="btn btn-success btn-block btn-lg" id="definition_map_continue_button">Continue</button>
		<button type="button" class="btn btn-warning btn-block btn-lg" id="sentence_continue_button">Finish!</button>
	</div>

</form> <!-- end of level 3 form -->

<div id="level_3_completed" align="center">
	<%= image_tag("medal_green_100.png", alt: "Freestyle Medal") %>

	<h1>Congratulations!</h1>

	<p class="lead">
		<span id="level_congrats_text">You've completed Freestyle for </span>
		and earned 5 experience points (XP)!
	</p>

	<% unless current_user.is_student? %>
		<%= render "games/share_accomplishment" %>
	<% end %>

	<% if current_user.incomplete_freestyles.count > 1 %>
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4>Play another Freestyle game?</h4>
			</div>
			<div class="panel-body center">
				<div class="row">
					<% @four_free_words.each do |w| %>
						<div class="col-sm-3">
							<div class="data-url pointer new-freestyle-game-circle"
									 data-url="/freestyle?word_id=<%= w.id %>">
								<%= w.name %>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	<% end %>
</div>
