<div class="scoreboard text-center text-muted mb-3">
	<div class="row">
		<div class="col-sm-4">
			<div class="progress progress-bar-container">
				<div class="progress-bar"
					   role="progressbar"
						 style="width: 0%;"
						 aria-valuenow="0"
						 aria-valuemin="0"
						 aria-valuemax="100">
					0%
				</div>
			</div>
		</div>
		<div class="col-sm-4 scoreboard-div">
			<i class="fa fa-money"></i>
			<span class="scoreboard-points">0</span>
			<i class="fa fa-arrow-down text-danger"></i>
			<i class="fa fa-arrow-up text-success"></i>
		</div>
		<div class="col-sm-4">
			<i class="fa fa-clock-o"></i>
			<span class="scoreboard-timer">0</span>
		</div>
	</div>
</div>
<div class="bg-faded">
	<h1 class="display-2" id="chosen-word-header-container"></h1>
</div>
<%= render "games/fund_game_container",
	word: @chosen_word,
	record: @record,
	synonyms: @synonyms,
	antonyms: @antonyms,
	rwe: @real_world_examples
%>
<div id="review_level_one_container" class="center">
	<div class="bg-success">
		<%= image_tag("strength1.png",
			alt: "Congrats on Basics Gold!",
			title: "Congrats on Basics Gold!")
		%>
		<h1 class="text-success"><%= random_congrats %>!</h1>
		<p>
			<span id="level-congrats-text">
				You now know the Basics for
			</span>
		</p>
	</div>
	<%= render "games/play_another",
		url: "#{jeop_game_link(@chosen_word.id)}",
		image_src: "strength2.png",
		game_name: "Intermediate"
	%>
	<% if logged_in? && current_user.is_not_a_student? %>
		<%= render "games/share_accomplishment" %>
	<% end %>
</div>
<%= render "games/fund_buttons" %>
