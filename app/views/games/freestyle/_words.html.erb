<h5 class="mt-3 mb-3">
	<i class="fa fa-book"></i> Words
	<small class="text-muted">Click any word to see more info.</small>
</h5>
<% current_user.words.each do |word| %>
	<%= link_to word_path(word), remote: true do %>
		<span class="badge badge-pill badge-default" data-word-id="<%= word.id %>">
			<%= word.name %>
		</span>
	<% end %>
<% end %>
