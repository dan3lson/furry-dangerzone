<%= sent_stems.each do |ss| %>
	<h4 data-sent-stem-id="<%= ss.id %>">
		<i class="fa fa-pencil"></i> <%= ss.text %>
	</h4>
	<div class="form-group">
		<%= text_area_tag ss.word.id,
											nil,
											class: "form-control",
											placeholder: "Type in here..."
		%>
	</div>
	<hr>
<% end %>
