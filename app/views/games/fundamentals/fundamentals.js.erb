	var targetWordSpanLetters = [];

	$.each(targetWord.name.split(""), function() {
		wordLetterSpan = $(createElem("span")).append(this);
		targetWordSpanLetters.push(wordLetterSpan);
	})

	$targetWordH1.html(targetWordSpanLetters);

	var $firstInput;
	var firstInputText;
	var wordSubstring;
