			makeLettersGreen($targetWordH1, numLettersTyped);
			successLetters = $targetWordH1.find("span.text-success").length;

			if (successLetters != numLettersTyped) {
				makeLettersDefault($targetWordH1);
				makeLettersGreen($targetWordH1, numLettersTyped);
			}
