		if (firstInputText == targetWord.name) {
			var $spellingSpeedsterInputPartial = $("<%= j render(partial: 'games/fundamentals/spelling_speedster', locals: { rows: @rows }) %>");
			numInputs = $(".spell-the-word.form-control-success").length + 1;
