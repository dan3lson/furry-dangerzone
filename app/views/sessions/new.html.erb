<% title "Have an account? Log in here." %>
<% description "New to Leksi? Start learning new words today!" %>
<% set_meta_tags keywords: %w[login signup account tablet desktop signin app
  vocabulary words preview literacy learning games education vocab fun goal
  master] %>
<% set_meta_tags og: {
  title:    "Have an account? Log in here.",
	description: "Quickly log in to get back to mastering your words."
} %>
<% set_meta_tags twitter: {
  card: "Learn vocabulary free, without ads or hidden charges. It's simple, fun,
    and based on research.",
  title: "Have an account? Log in here.",
  description: "Quickly log in to get back to mastering your words."
} %>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <h2 class="mb-3">Log In</h2>
      <div class="form-group">
        <%= f.label :email_or_username, "Email or Username" %>
        <%= f.text_field :email_or_username, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <%= f.submit "Log In", class: "btn btn-primary btn-lg btn-block" %>
    <% end %>
    <div class="text-center mt-3">
      <!-- <small>
        New user?
        <%#= link_to "Sign up now", signup_path %>.
      </small>
      <br> -->
      <small>
        Forgot your password?
        <%= mail_to "help@leksi.education", "Email us",
          subject: "Password Reset" %>
        to reset it.
      </small>
    </div>
  </div>
</div>
