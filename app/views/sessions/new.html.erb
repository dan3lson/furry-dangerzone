<% title "Have an account? Log in here." %>
<% description "New to Leksi? Give us a try with no need to create a (free)
  account." %>
<% set_meta_tags keywords: %w[login signup account tablet desktop signin app
  vocabulary words preview literacy learning games education vocab fun goal
  master] %>

<% set_meta_tags og: {
  title:    "Have an account? Log in here.",
	description: "Quickly log in to get back to mastering your awesome words."
} %>

<% set_meta_tags twitter: {
  card: "Learn vocabulary free, without ads or hidden charges. It's simple, fun,
    and based on research.",
  title: "Have an account? Log in here.",
  description: "Quickly log in to get back to mastering your awesome words."
} %>

<div class="well form-signin">
  <%= form_for(:session, url: login_path) do |f| %>
    <h2 class="form-signin-heading">Log in</h2>

    <%= f.label :email_or_username, class: "sr-only" %>
    <%= f.text_field :email_or_username, class: 'form-control',
      placeholder: "Email or Username" %>

    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, class: 'form-control',
      placeholder: "Password" %>

    <%= f.submit "Log in", class: "btn btn-default btn-lg" %>
  <% end %>
  <br/>

  <div class="center">
    <small class="basic-apple-blue-link">
      New user?
      <%= link_to "Sign up now", signup_path %>!</p>
    </small>

    <small class="basic-apple-blue-link">
      Forgot your password?
      <%= mail_to "help@leksi.education", "Email us",
        subject: "Password Reset" %>
      to reset it.
    </small>
  </div>
</div>
