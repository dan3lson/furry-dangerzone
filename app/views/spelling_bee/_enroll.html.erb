<section class="spee-bee-about-section text-center spe-bee-yellow-bg">
	<div class="row">
		<div class="col-lg-3">
			<%= image_tag(
				"spelling-bee.png",
				class: "mx-auto d-block",
				width: 300,
				height: 300
			) %>
		</div>
		<div class="col-lg-9">
			<h4><%= icon "star" %> 2nd Harlem Spelling Bee <%= icon "star" %></h4>
			<h1 class="display-3">Enroll soon</h1>
			<p class="lead">
				Early Bird registration will start on Monday, August 21st, 2017.
			</p>
			<p class="lead">
				Until then, if you have any questions, comments, or concerns, we'd love
				to hear from you.
			</p>
			<p class="text-center">
				<%#= link_to "Enroll your school",
										spelling_bee_path,
										class: "btn btn-primary btn-lg disabled",
										role: "button" %>
			</p>
		</div>
	</div>
</section>
