<% provide(:title, "Classrooms (#{@classrooms_count})") %>
<h1>Classrooms <span class="text-muted">(<%= @classrooms_count %>)</span></h1>
<div class="mb-3">
	<div>
			<%= link_to new_school_classroom_path,
									role: "button",
									class: "btn btn-primary btn-block" do
			%>
				<i class="fa fa-plus-circle"></i> Create New Classroom
			<% end %>
	</div>
	<div class="clear"></div>
</div>
<% if current_user.has_classrooms? %>
	<div class="card-deck">
		<% @classrooms.each do |classroom| %>
			<div class="card mb-3">
				<div class="card-body">
					<h4 class="card-title">
						<%= link_to classroom.name, school_classroom_path(classroom) %>
					</h4>
					<p class="card-text text-muted">
						Grade <%= classroom.grade %>
						<br>
						<%= pluralize(classroom.students.count, "student") %>
					</p>
				</div>
			</div>
		<% end %>
	</div>
<% else %>
	<div class="alert alert-info" role="alert">
		<%= icon "info-circle" %> You haven't created any Classrooms yet.
		Click the blue button above to get started on your first one.
	</div>
<% end %>
