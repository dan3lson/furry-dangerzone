<% provide(:title, "Classrooms (#{@classrooms_count})") %>
<% provide(:header, "Classrooms (#{@classrooms_count})") %>
<div class="mb-3">
	<div class="float-right">
			<%= link_to new_school_classroom_path,
									role: "button",
									class: "btn btn-primary btn-block" do
			%>
				<i class="fa fa-plus-circle"></i> Create New Classroom
			<% end %>
	</div>
	<div class="clear"></div>
</div>
<% if current_user.has_classrooms? %>
	<div class="card-deck">
		<% @classrooms.each do |classroom| %>
			<div class="card mb-3">
				<div class="card-block">
					<h4 class="card-title">
						<%= link_to classroom.name, school_classroom_path(classroom) %>
					</h4>
					<p class="card-text text-muted">
						<small>Grade <%= classroom.grade %></small>
						<br>
						<small><%= pluralize(classroom.students.count, "student") %></small>
					</p>
				</div>
			</div>
		<% end %>
	</div>
<% else %>
	<div class="alert alert-info" role="alert">
		<%= icon "info-circle" %> You haven't created any Classrooms yet.
		Click the blue button above to get started on your first one.
	</div>
<% end %>
