<div class="table-responsive">
	<table class="table table-bordered">
		<th>Student</th>
		<th>Total</th>
		<td></td>
		<!-- TODO Only pull students with open freestyles -->
		<% current_user.students.alphabetical.each do |stu| %>
			<% stu.unreviewed_frees.group_by(&:user).each do |user, frees| %>
				<tr>
					<td>
						<%= stu.username %>
					</td>
					<td>
						<%= frees.count %>
					</td>
					<td>
						<%= link_to "#",
								"data-toggle": "modal",
								"data-target": "#see-free-#{stu.id}" do
						%>
							<%= icon "eye" %> See More
						<% end %>
						<div class="modal fade"
								 id="see-free-<%= stu.id %>"
								 tabindex="-1" role="dialog"
								 aria-labelledby="exampleModalLongTitle"
								 aria-hidden="true">
							<div class="modal-dialog" role="document">
								<div class="modal-content">
									<div class="modal-header">
										<h5 class="modal-title">
											<%= stu.username %>'s Freestyle Responses
										</h5>
										<button type="button"
														class="close"
														data-dismiss="modal"
														aria-label="Close">
											<span aria-hidden="true">&times;</span>
										</button>
									</div>
									<div class="modal-body">
										<div class="alert alert-info">
											<%= icon "info-circle" %>
											Any target words that your students used in their
											response are highlighted.
										</div>
										<% frees.each do |f| %>
											<div class="card mb-3">
												<div class="card-block" data-free-id="<%= f.id %>">
													<h4 class="card-title"><%= f.game %></h4>
													<p class="card-text">
														<small><%= icon "quote-left" %></small>
														<%= highlight(
															f.input,
															f.user_word.word.name
														) %>
														<small><%= icon "quote-right" %></small>
													</p>
													<div class="mb-3">
														<%= link_to freestyle_path(
																id: f.id,
																new_status: "redo"
															),
															role: "button",
															class: "btn btn-danger btn-block",
															method: :patch,
															remote: true do
														%>
															<%= icon "thumbs-down" %> Request Redo
														<% end %>
														<%= link_to freestyle_path(
																id: f.id,
																new_status: "pass"
															),
															role: "button",
															class: "btn btn-success btn-block",
															method: :patch,
															remote: true do
														%>
															<%= icon "thumbs-up" %> Pass
														<% end %>
													</div>
												</div>
												<div class="card-footer text-center text-muted">
													written <%= time_ago_in_words(f.created_at) %> ago
												</div>
											</div>
										<% end %>
									</div>
									<div class="modal-footer">
										<button type="button"
														class="btn btn-secondary"
														data-dismiss="modal">
											Close
										</button>
									</div>
								</div>
							</div>
						</div>
					</td>
				</tr>
			<% end %>
		<% end %>
	</table>
</div>
