<% if classroom.has_students? %>
	<div class="table-responsive">
	  <table class="table table-bordered table-hover table-striped">
			<thead>
				<tr>
					<th>ID</th>
					<th>Username</th>
					<th>Logins</th>
					<th>Words</th>
					<th>Total: <%= pluralize(classroom.students.count, "student") %></th>
				</tr>
			</thead>

	    <% classroom.students.alphabetical.each do |student| %>
	      <tr>
	        <th scope="row"><%= student.id %></th>
	        <td><%= student.username %></td>
	        <td>
						Number of Logins: <%= student.num_logins %>
						<br>
						Last Login Time:
	          <% if student.last_login.nil? %>
							<span class="text-danger">Never</span>
	          <% else %>
	            <%= time_ago_in_words(student.last_login) %> ago
	          <% end %>
	        </td>
	        <td>
						Number of Words: <%= student.num_words %>
						<br>
						Words Mastered: <%= student.myLeksi_mastery %>%
					</td>
	        <td>
						<%= link_to user_path(student),
												role: "button",
												method: :delete,
												class: "btn btn-danger",
												title: "Remove #{student.username} from classroom?",
												method: :delete do
						%>
							<i class="fa fa-trash"></i>
							Remove
						<% end %>
					</td>
	      </tr>
	    <% end %>
    </table>
	</div>
<% else %>
	<div class="alert alert-info">
		<%= icon "info-circle" %> This classroom doesn't have any students yet.
		<%= link_to "Click here",
								new_school_classroom_student_path(classroom),
								class: "alert-link"
		%>
		to add students to this classroom.
	</div>
<% end %>
