var created = "<%= @created %>";
var wordID = "<%= @word.id %>";
var $cardBlock = $("div").find("[data-word-id='" + wordID + "']");
var $card = $cardBlock.parent();
var $footer = $card.find(".card-footer");
var $form = $card.find("form");
removeAlerts();

if (created == "true") {
	var count = parseInt("<%= @meaning_alt_count %>");
	var $cardTextPartial = $("<%= j render(partial: 'school/meaning_alts/card_text', locals: { m_a: @m_a }) %>");
	var $editPartial = $("<%= j render(partial: 'school/meaning_alts/edit_btn', locals: { m_a: @m_a }) %>");
	var $newCardBlock = createElem("div", "card-body")
											.attr("data-meaning-alt-id", "<%= @m_a.id %>");
  var $flash = createFlash(
		"success", "Success; thanks! You can create another one below."
	);
	$newCardBlock.append($cardTextPartial, $editPartial)
							 .prepend($flash)
							 .insertBefore($footer)
							 .hide()
							 .fadeIn();
	$form[0].reset();

	if (count > 1) {
		$card.find(".fa-check").addClass("text-success");
	}
} else {
	var $errorsPartial = $("<%= j render(partial: 'shared/error_messages', locals: { object: @m_a }) %>");
	$footer.prepend($errorsPartial);
}

function removeAlerts() {
	$(".alert").remove();
}

function createFlash(_class, text) {
	return createElem("div", "alert alert-" + _class)
				 .append(text)
				 .attr("role", "alert");
}

function createElem(elem, elemClass, elemID) {
	_class = elemClass || null;
	_id = elemID || null;
	return $("<" + elem + ">", { class: _class, id: _id });
}
