var created = "<%= @created %>";
var wordID = "<%= @word.id %>";
var $card = $("div").find("[data-word-id='" + wordID + "']");
var $cardBlock = $card.find(".card-block");
var $footer = $card.find(".card-footer");
var $form = $card.find("form");
$card.find(".alert").remove();

if (created == "true") {
	var count = parseInt("<%= @meaning_alt_count %>");
	var $cardBlockPartial = $("<%= j render(partial: 'school/meaning_alts/card_text', locals: { m_a: @m_a }) %>");
	$cardBlock.append($cardBlockPartial).append("<hr>").hide().fadeIn();
	$cardBlock.find("p.card-text:last").prepend(
		createFlash("success", "Success! You can create another one below.")
	).hide().fadeIn();
	$form[0].reset();

	if (count > 1) {
		$card.find(".fa-check").addClass("text-success");
	}
} else {
	var $errorsPartial = $("<%= j render(partial: 'shared/error_messages', locals: { object: @m_a }) %>");
	$footer.prepend($errorsPartial);
}

function createFlash(_class, text) {
	return createElem("div", "alert alert-" + _class)
				 .append(text)
				 .attr("role", "alert");
}

function createElem(elem, elemClass, elemID) {
	_class = elemClass || null;
	_id = elemID || null;
	return $("<" + elem + ">", { class: _class, id: _id });
}
