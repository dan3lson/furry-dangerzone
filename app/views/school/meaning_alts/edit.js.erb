var meaningAltID = "<%= @m_a.id %>";
var $cardBody = $("div").find("[data-meaning-alt-id='" + meaningAltID + "']");
var $buttons = $cardBody.find("p:last");
var $formPartial = $("<%= j render(partial: 'school/meaning_alts/form', locals: { m_a: @m_a, method: :patch, btn_text: 'Update', word: @word }) %>");
var $deleteBtnPartial = $("<%= j render(partial: 'school/meaning_alts/delete_btn', locals: { m_a: @m_a, word: @word }) %>");
$buttons.hide();
$cardBody.find("p").remove();
$cardBody.append($formPartial, $deleteBtnPartial);
removeAlerts();

function removeAlerts() {
	$(".alert").remove();
}
