<% provide(:title, "Home") %>
<% provide(:header, "Home") %>
<div class="row">
	<div class="col-md-6">
		<div class="card mb-3">
			<div class="card-header">
				<%= icon "clock-o" %> Recent Activity
				<small class="text-muted">Last 24 Hours</small>
			</div>
			<div class="card-block">
				<% if current_user.has_classroom_activity? %>
					<% current_user.students.alphabetical.each do |user| %>
						<%= render "users/recent_activity", user: user %>
					<% end %>
				<% else %>
					<small class="text-muted">None</small>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-md-6">
		<div class="card">
			<div class="card-header">
				<%= icon "quote-left" %> Freestyle Responses (Not Reviewed)
			</div>
			<div class="card-block">
				<%# if current_user.has_unreviewed_frees? %>
				<% if true %>
					<div class="table-responsive">
					  <table class="table table-bordered">
					    <th>Username</th>
					    <th>Game</th>
					    <td></td>

					    <% current_user.students.alphabetical.each do |student| %>
								<tr>
									<%# binding.pry %>
									<td>
										<%= student.username %>
									</td>
									<td>
										...
									</td>
									<td>
										<%= icon "eye" %> See More
									</td>
								</tr>
					    <% end %>
				    </table>
					</div>
				<% else %>
					<div class="alert alert-info">
						<%= icon "info-circle" %> This classroom doesn't have any students yet.
						Click the blue button above to add students.
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
