<%= form_for([:school, word], remote: remote) do |f| %>
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	<%= render "shared/error_messages", object: word %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :definition %>
		<%= f.text_field :definition, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :phonetic_spelling, "Phonetic Spelling (Optional)" %>
		<%= f.text_field :phonetic_spelling, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :part_of_speech, "Part of Speech (Optional)" %>
		<%= f.text_field :part_of_speech, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :photo do %>
			<%= f.file_field :photo %>
		<% end %>
	</div>
	<%= f.submit btn_text, class: "btn btn-primary btn-block" %>
<% end %>
