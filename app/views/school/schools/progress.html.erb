		<div class="col-xs-6 light-green-bg">
			<ol>
				<% @most_frees_played.each do |u| %>
					<li class="basic-apple-blue-link">
						<%= link_to u.username, "student?id=#{u.id}" %>
						<small>
							(<%= num_freestyle_games_completed(u) %>
							|
							<%= percentage_of_freestyle_games_completed(u) %>%)
						</small>
					</li>
				<% end %>
			</ol>
		</div>
	</div>
</div>
