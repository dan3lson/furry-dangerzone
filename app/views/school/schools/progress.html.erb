<% provide(:title, @title_and_header) %>
<% provide(:header, @title_and_header) %>

<div class="row">
	<div class="col-xs-6 stu-pic-container pointer data-url"
			 data-url="/school/progress?filter=fs_class_one"
			 align="center">
		<div class="class-default-image"></div>
		<div>
			<h4>Class One</h4>
		</div>
	</div>
	<div class="col-xs-6 stu-pic-container pointer data-url"
			 data-url="/school/progress?filter=fs_class_two"
			 align="center">
		<div class="class-default-image"></div>
		<div class="">
			<h4>Class Two</h4>
		</div>
	</div>
</div>

<hr>

<div class="teacher-edition-stats-container">
	<div class="row">
		<div class="inline-block">
			<%= image_tag("level_up_color_50.png", alt: "myLeksi Mastery %") %>
		</div>

		<h4 class="inline-block">
			myLeksi Mastery Percentage
			<small>
				Overall, this class has mastered
				<%= display_average_values(@class, "myLeksi_mastery") %>%
				of their words.
			</small>
		</h4>

		<div class="clear"></div>

		<br>

		<div class="col-xs-6 light-red-bg">
			<ol>
				<% @lowest_myLeksi_mastery.each do |u| %>
					<li class="basic-apple-blue-link">
						<%= link_to u.username, "student?id=#{u.id}" %>
						<small>(<%= u.myLeksi_mastery %>%)</small>
					</li>
				<% end %>
			</ol>
		</div>

		<div class="col-xs-6 light-green-bg">
			<ol>
				<% @highest_myLeksi_mastery.each do |u| %>
					<li class="basic-apple-blue-link">
						<%= link_to u.username, "student?id=#{u.id}" %>
						<small>(<%= u.myLeksi_mastery %>%)</small>
					</li>
				<% end %>
			</ol>
		</div>
	</div>

	<br>

	<div class="row">
		<div class="inline-block">
			<%= image_tag("myLeksi_color_50.png", alt: "Saved Words") %>
		</div>

		<h4 class="inline-block">
			Added Words
			<small>
				Overall, this class has added
				<%= display_average_objs(@class, "words") %> words.
			</small>
		</h4>

		<div class="clear"></div>

		<br>

		<div class="col-xs-6 light-red-bg">
			<ol>
				<% @least_saved_words.each do |u| %>
					<li class="basic-apple-blue-link">
						<%= link_to u.username, "student?id=#{u.id}" %>
						<small>(<%= u.words.count %>)</small>
					</li>
				<% end %>
			</ol>
		</div>

		<div class="col-xs-6 light-green-bg">
			<ol>
				<% @most_saved_words.each do |u| %>
					<li class="basic-apple-blue-link">
						<%= link_to u.username, "student?id=#{u.id}" %>
						<small>(<%= u.words.count %>)</small>
					</li>
				<% end %>
			</ol>
		</div>
	</div>

	<br>

	<div class="row">
		<div class="inline-block">
			<%= image_tag("time_color_50.png", alt: "Time Spent Playing") %>
		</div>

		<h4 class="inline-block">
			Time Spent Playing
			<small>
				Overall, this class has spent
				<%= display_average_values(@class, "time_spent_playing").round(2) %>
				minutes completing all three games.
			</small>
		</h4>

		<div class="clear"></div>

		<br>

		<div class="col-xs-6 light-red-bg">
			<ol>
				<% @least_time_spent_playing.each do |u| %>
					<li class="basic-apple-blue-link">
						<%= link_to u.username, "student?id=#{u.id}" %>
