<% provide(:title, "Edit Example/Non-Examples") %>
<% provide(:header, "Edit Example/Non-Examples: #{@e_non_e.word.name}") %>

<div class="card">
  <div class="card-body bg-light">
    <%= render "shared/error_messages", object: @e_non_e %>
    <%= render "school/example_non_examples/form", btn_text: "Update",
                                                   word: @word,
                                                   e_non_e: @e_non_e
    %>
  </div>
  <div class="card-footer text-muted text-center">
    You added this tag <%= time_ago_in_words(@e_non_e.created_at) %> ago.
    <p class="mt-3">
      <%= link_to school_word_example_non_example_path(@word, @e_non_e),
        role: "button",
        class: "btn btn-sm btn-danger",
        method: :delete do
      %>
        <i class="fa fa-trash"></i>
        Delete
      <% end %>
    </p>
  </div>
</div>
