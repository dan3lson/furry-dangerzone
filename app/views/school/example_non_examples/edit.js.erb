var exNonExID = "<%= @e_non_e.id %>";
var $cardBlock = $("div").find("[data-ex-non-ex-id='" + exNonExID + "']");
var $buttons = $cardBlock.find("p:last");
var $formPartial = $("<%= j render(partial: 'school/example_non_examples/form', locals: { e_non_e: @e_non_e, method: :patch, btn_text: 'Update', word: @word }) %>");
var $deleteBtnPartial = $("<%= j render(partial: 'school/example_non_examples/delete_btn', locals: { e_non_e: @e_non_e, word: @word }) %>");
$buttons.hide();
$cardBlock.find("p").remove();
$cardBlock.append($formPartial, $deleteBtnPartial);
removeAlerts();

function removeAlerts() {
	$(".alert").remove();
}
