<div class="card">
	<div class="card-block"
			 data-tag-id="<%= tag.id %>"
			 data-tag-name="<%= tag.name %>">
		<h4 class="card-title">
			<%= link_to tag.name, "/myTags/#{tag.id}" %>
			<br>
			<small class="text-muted">
				<%= words_for(current_user, tag).count %>
				<i class="fa fa-book"></i>
				|
				<%= progress_for(current_user, tag) %>
				<i class="fa fa-percent"></i>
			</small>
		</h4>
	</div>
</div>
