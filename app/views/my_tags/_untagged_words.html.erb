<div class="card">
	<div class="card-body">
		<div class="lead">
			<span class="fa-stack">
			  <i class="fa fa-tag fa-stack-1x"></i>
			  <i class="fa fa-ban fa-stack-2x text-danger"></i>
			</span>
			Untagged Words
		</div>
		<div>
			<% if current_user.has_words? %>
				<% Word.untagged_for(current_user).each do |word| %>
					<%= link_to myLeksi_show_path(word), class: "text-white" do %>
						<span class="badge badge-pill badge-default">
							<%= word.name %>
						</span>
					<% end %>
				<% end %>
			<% else %>
				<small class="text-muted">None</small>
			<% end %>
		</div>
	</div>
</div>
