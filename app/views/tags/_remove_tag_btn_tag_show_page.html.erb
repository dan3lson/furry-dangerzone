<% if tag_has_words?(current_user, tag) %>
  <%= link_to user_word_tag_path(tag_name: tag.name),
    class: "my_tags-remove-btn", method: :delete do %>
    <i class="fa fa-remove gray"></i>
  <% end %>
<% else %>
  <% ut_id = UserTag.find_by(user: current_user, tag: tag).id %>

  <%= link_to user_tag_path(id: ut_id, tag_name: tag.name),
    class: "my_tags-remove-btn", method: :delete do %>
    <i class="fa fa-remove gray"></i>
  <% end %>
<% end %>
