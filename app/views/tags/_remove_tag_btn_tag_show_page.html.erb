<% if Rails.env.test? %>
  <% if words_for(current_user, tag).count > 0 %>
    <%=
      link_to "remove",
      user_word_tag_path(tag_name: tag.name),
      method: :delete, class: "btn btn-default btn-sm",
      class: "btn btn-default form-control"
    %>
  <% else %>
    <%=
      link_to "remove",
      user_tag_path(id: UserTag.find_by(
        user: current_user,
        tag: tag).id,
        tag_name: tag.name
      ),
      method: :delete, class: "btn btn-default btn-sm",
      class: "btn btn-default form-control"
    %>
  <% end %>
<% else %>
  <% if words_for(current_user, tag).count > 0 %>
    <%=
      link_to image_tag("remove_black_32.png"),
      user_word_tag_path(tag_name: tag.name),
      method: :delete
    %>
  <% else %>
    <%=
      link_to image_tag("remove_black_32.png"),
      user_tag_path(id: UserTag.find_by(
        user: current_user,
        tag: tag).id,
        tag_name: tag.name
      ),
      method: :delete
    %>
  <% end %>
<% end %>
