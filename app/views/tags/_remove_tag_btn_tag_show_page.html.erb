<% if Rails.env.test? %>
  <!-- if tag has words attached to it -->
  <% if words_for(current_user, tag).count > 0 %>
    <%= link_to "remove tag", user_word_tag_path(tag_name: tag.name),
      method: :delete %>
  <% else %>
    <%= link_to "remove tag", user_tag_path(id: UserTag.find_by(
        user: current_user, tag: tag).id,
        tag_name: tag.name
      ), method: :delete %>
  <% end %>
<% else %>
  <% if words_for(current_user, tag).count > 0 %>
    <%=
      link_to image_tag("remove_black_32.png"),
      user_word_tag_path(tag_name: tag.name),
      method: :delete
    %>
  <% else %>
    <%= link_to image_tag("remove_black_32.png"),
      user_tag_path(id: UserTag.find_by(
        user: current_user, tag: tag).id,
        tag_name: tag.name
      ), method: :delete %>
  <% end %>
<% end %>
