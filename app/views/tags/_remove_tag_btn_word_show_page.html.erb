<% if Rails.env.test? %>
  <% if words_for(current_user, tag).count > 0 %>
    <%=
      link_to "remove",
      user_word_tag_word_show_page_path(tag_name: tag.name),
      method: :delete, class: "btn btn-default btn-sm",
      class: "btn btn-default form-control"
    %>
  <% else %>
    <%=
      link_to "remove",
      user_word_tag_word_show_page_path(id: Usertag.find_by(
        user: current_user,
        tag: tag).id,
        tag_name: tag.name
      ),
      method: :delete, class: "btn btn-default btn-sm",
      class: "btn btn-default form-control"
    %>
  <% end %>
<% else %>
  <% if words_for(current_user, tag).count > 0 %>
    <% if params[:controller] == "words" && params[:action] == "show" %>
      <%=
        link_to image_tag("remove_gray_25.png"),
        user_word_tag_word_show_page_path(tag_name: tag.name),
        method: :delete
      %>
    <% else %>
      <%=
        link_to image_tag("remove_black_32.png"),
        user_word_tag_path(tag_name: tag.name),
        method: :delete
      %>
    <% end %>
  <% else %>
    <%=
      link_to image_tag("remove_black_32.png"),
      user_word_tag_word_show_page_path(id: Usertag.find_by(
        user: current_user,
        tag: tag).id,
        tag_name: tag.name
      ),
      method: :delete
    %>
  <% end %>
<% end %>
