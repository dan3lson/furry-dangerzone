<div>
  <p class="lead">Use the form below to create a new tag.</p>
  <%= form_for(@tag) do |f| %>
    <%= render 'shared/error_messages', object: @tag %>
    <div class="input-group">
      <%= f.label :name, class: "sr-only control-label" %>
      <%= f.text_field :name,
        class: "form-control",
        placeholder: "Name *"
      %>
      <span class="input-group-btn">
        <%= f.button type: "submit", class: "btn btn-info" do %>
          <i class="fa fa-save"></i>
          CREATE
        <% end %>
      </span>
    </div>
  <% end %>
</div>
