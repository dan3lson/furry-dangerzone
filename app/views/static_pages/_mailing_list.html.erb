<button type="button"
				class="btn btn-outline-warning btn-lg"
				data-toggle="modal"
				data-target="#email-signup-modal">
  Bee in the Know!
</button>

<div class="modal fade"
		 id="email-signup-modal"
		 tabindex="-1"
		 role="dialog"
		 aria-labelledby="email-signup-modal"
		 aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="exampleModalLabel">Join Our Mailing List</h3>
        <button type="button"
								class="close"
								data-dismiss="modal"
								aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render "shared/mailchimp" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
					Close
				</button>
      </div>
    </div>
  </div>
</div>
