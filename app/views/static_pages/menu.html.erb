<% provide(:title, "menu") %>
<% provide(:header, "menu") %>

<% if Rails.env.test? %>
  <p>
    <%= link_to "log out", logout_path, method: :delete, class: "btn btn-default form-control" %>
  </p>
<% end %>

<% if user_already_reviewed_latest_version? %>
  Thanks for reviewing the current Leksi version!
<% else %>
  <p>
    <%=
      link_to "Rate this app", new_version_review_path(latest_version),
      class: "btn btn-default form-control"
    %>
  </p>
<% end %>

<br>
<br>
<br>

<div class="well">
  <% if logged_in_and_current_user?(current_user) %>
    <p>
      <%=
        link_to "edit my profile", edit_user_path(current_user),
        class: "btn btn-default form-control" %>
    </p>
    <br/>
    <br/>
    <br/>
    <p>
      <%=
        link_to "delete my account", user_path(current_user),
        method: :delete, class: "btn btn-danger form-control"
      %>
    </p>
  <% end %>
</div>
