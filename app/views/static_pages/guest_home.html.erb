<section class="guest-section-home" id="get-started-now">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="display-4">Get Started Now</h1>
      <p>
        Complete the form below to bring Leksi to your classroom(s).
      </p>

      <p><small>All fields are required.</small></p>

      <%= form_tag(static_pages_contact_us_path, method: "post") do %>
        <div>
          <input type="text" value="" name="cf_name"
                 class="form-control" id="cf-name"
                 placeholder="Name"   required>
          <br/>
          <input type="email" value="" name="cf_email"
                 class="form-control"  id="cf-email"
                 placeholder="Email"   required>
          <br/>
          <input type="school_name" value="" name="cf_school_name"
                 class="form-control"        id="cf-school-name"
                 placeholder="School Name"   required>
          <br/>
          <textarea class="form-control" name="cf_comments" rows="3"
                    id="cf-comments"
                    placeholder="Comments"
                    required></textarea>
          <br>
          <p>
            <i class="fa fa-lock"></i>
            Security Check - please type:
            <strong>L3ks!</strong>

            <input type="text" value="" name="prove_ur_human"
                   class="form-control" id="prove-ur-human-field"
                   required>
          </p>
        </div>
        <div class="center">
          <button type="submit" value="Send" id="cf-submit-btn"
                  class="btn btn-primary btn-lg btn-block" disabled>
            <i class="fa fa-send-o"></i>
            Send
          </button>
        </div>
      <% end %>
    </div>
  </div>
</section>
