<% if words.class == String %>
	<div class="alert alert-danger"><%= results %></div>
<% else %>
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<% words.each do |word| %>
					<div class="card">
						<div class="card-block">
							<%= render "words/basics", word: word %>
							<% if current_user.is_brainiac? %>
								<%= render "searches/results_options", word: word %>
							<% end %>
						</div>
						<% if current_user.is_teacher? %>
							<div class="card-footer">
								<p class="text-muted">
									Create an Example/Non-Example below:
								</p>
								<%= render "school/example_non_examples/form", word: word %>
							</div>
						<% end %>
					</div>
			<% end %>
		</div>
	</div>
<% end %>
