<% if word_groups.nil? %>
	<div class="alert alert-danger"><%= error %></div>
<% else %>
	<% word_groups.each do |name, words| %>
		<div class="card card-inverse dark text-center mb-3">
			<div class="card-block">
				<h2 class="card-title">
					<%= name %>
					<%# if words.first.has_pronunciation? %>
					<% if false %>
						<audio src="https://ssl.gstatic.com/dictionary/static/sounds/de/0/<%= name %>.mp3"
									 id="audio"
									 preload="auto">
						</audio>
						<small>
							<i class="fa fa-volume-up hover pointer text-primary"></i>
						</small>
					<% end %>
				</h2>
				<small><%= pluralize(words.count, "result") %></small>
			</div>
		</div>
		<div class="search card-columns">
			<% words.each do |word| %>
				<div class="card mb-3">
					<div class="card-block" data-word-id="<%= word.id %>">
						<h2 class="card-title">
							<%= render "words/pos_def", word: word %>
						</h2>
						<%= render "searches/results_options", word: word %>
					</div>
				</div>
			<% end %>
		</div>
	<% end %>
<% end %>
