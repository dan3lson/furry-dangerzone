<% if results.class == String %>
	<div class="alert alert-danger center"><%= results %></div>
<% else %>
	<% results.each_with_index do |word, index| %>
		<div class="panel panel-default">
			<div class="panel-body">
				<%= render "words/display", word: word %>
			</div>
			<div class="panel-footer">
				<%= render "searches/results_options",
					display_button: display_button,
					word: word
				%>
			</div>
		</div>
	<% end %>
<% end %>
