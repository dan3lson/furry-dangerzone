<% if current_user.has_word?(word) %>
	<%= link_to myLeksi_show_path(word),
							class: "btn btn-outline-secondary" do
	%>
		<i class="fa fa-eye"></i>
		Already Saved - See Details
	<% end %>
<% else %>
	<%= link_to user_word_path(word_id: word.id),
							class: "btn btn-outline-success btn-lg",
							method: :post,
							remote: true do
	%>
		<i class="fa fa-plus-circle"></i>
		Add to Notebook
	<% end %>
<% end %>
