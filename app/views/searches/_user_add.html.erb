<% if current_user.has_word?(word) %>
	<%= button_tag nil,
								 class: "btn btn-outline-secondary btn-block",
								 disabled: true do
	%>
		<i class="fa fa-save"></i>
		Already Added!
	<% end %>
<% else %>
	<%= link_to user_word_path(word_id: word.id),
							class: "btn btn-outline-primary btn-block",
							method: :post,
							remote: true do
	%>
		<i class="fa fa-save"></i>
		Add to Words
	<% end %>
<% end %>
