<% if current_user.has_word?(word) %>
	<%= link_to "/myLeksi/#{word.id}",
							class: "btn btn-outline-secondary btn-block" do
	%>
		<i class="fa fa-eye"></i>
		Already Saved - See Details
	<% end %>
<% else %>
	<%= link_to user_word_path(word_id: word.id),
							class: "btn btn-outline-primary btn-block",
							method: :post,
							remote: true do
	%>
		<i class="fa fa-plus-circle"></i>
		Add to Words
	<% end %>
<% end %>
