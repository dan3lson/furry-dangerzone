<% title "Dictionary: Look up words or choose one randomly or from a list." %>
<% description "Explore new words to add to your Notebook. Then master them!" %>
<% set_meta_tags keywords: "learn education vocabulary vocab research engage fun langauge literacy english language study dictionary words flashcards games list notebook" %>
<% set_meta_tags og: {
  title:    "Dictionary: Look up words or choose one randomly or from a list.",
	description: "Look up words you don\'t know or select ones from a specific list"
} %>
<% set_meta_tags twitter: {
  card: "Learn vocabulary free, without ads or hidden charges. It's simple, fun, and works.",
  title: "Leksi Dictionary",
  description: "Look up words you don\'t know or select ones from a specific list"
} %>

<h1><%= icon("search") %> Dictionary</h1>
<div class="explore filter-div mb-3 card">
  <div class="card-body">
    <div class="btn-group mb-3"
         role="group"
         aria-label="Dictionary filter">
      <%= link_to searches_random_path, role: "button",
                                        class: "btn btn-secondary",
                                        remote: true do
      %>
        <%= icon("random") %> Random
      <% end %>

      <div class="btn-group" role="group">
        <button id="btnGroupDrop1"
                type="button"
                class="btn btn-secondary dropdown-toggle"
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false">
          <%= icon("institution") %> Grades
        </button>
        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
          <%= link_to "1st Grade", search_grades_path(grade: "first_grade"),
                                   class: "dropdown-item disabled",
                                   remote: true
          %>
          <%= link_to "2nd Grade", search_grades_path(grade: "second_grade"),
                                   class: "dropdown-item",
                                   remote: true
          %>
          <%= link_to "3rd Grade", search_grades_path(grade: "third_grade"),
                                   class: "dropdown-item",
                                   remote: true
          %>
          <%= link_to "4th Grade", search_grades_path(grade: "fourth_grade"),
                                   class: "dropdown-item",
                                   remote: true
          %>
          <%= link_to "5th Grade", search_grades_path(grade: "fifth_grade"),
                                   class: "dropdown-item",
                                   remote: true
          %>
          <%= link_to "6th Grade", search_grades_path(grade: "sixth_grade"),
                                   class: "dropdown-item",
                                   remote: true
          %>
          <%= link_to "7th Grade", search_grades_path(grade: "seventh_grade"),
                                   class: "dropdown-item",
                                   remote: true
          %>
          <%= link_to "8th Grade", search_grades_path(grade: "eigth_grade"),
                                   class: "dropdown-item",
                                   remote: true
          %>
        </div>
      </div>
    </div>
    <div class="search-form-container">
      <%= render "searches/form" %>
    </div>
  </div>
</div>
<div class="search-container"></div>
