<% provide(:header, "Look Up") %>

<% title "Leksi Dictionary" %>
<% description "Look up words you don\'t know or select ones from a specific list" %>
<% set_meta_tags keywords: %w[learn education vocabulary vocab research engage fun langauge literacy english language study dictionary words flashcards games list notebook] %>

<% set_meta_tags og: {
  title:    "Leksi Dictionary",
	description: "Look up words you don\'t know or select ones from a specific list"
} %>

<% set_meta_tags twitter: {
  card: "Learn vocabulary free, without ads or hidden charges. It's simple, fun, and works.",
  title: "Leksi Dictionary",
  description: "Look up words you don\'t know or select ones from a specific list"
} %>

<%= render "searches/guide" %>
<div class="add-look-up-word-container">
  <p>
    <%= render "searches/form", display_button_for: "user" %>
  </p>
  <p class="center">
    <span id="random-search-btn">
      <%= link_to "I\'m feeling adventurous!", search_results_path(
        rand: "rand",
        display_button_for: "user"),
        remote: true
      %>
    </span>
  </p>
</div>

<br>

<div class="clear"></div>

<div class="search-results-container col-sm-6 col-sm-offset-3"></div>
