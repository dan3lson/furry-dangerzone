<%= form_for :user_word,
						 url: user_word_path,
						 html: { id: "search-results" },
						 method: :post do |f|
%>
	<%= hidden_field_tag :id, word.id %>

	<% if current_user.is_brainiac? && logged_in? %>
		<div class="row">
			<div class="col-md-6">
				<%= render "searches/user_add", word: word %>
			</div>
			<div class="col-md-6">
				<%= render "searches/user_play", word: word %>
			</div>
		</div>
	<% end %>
<% end %>
