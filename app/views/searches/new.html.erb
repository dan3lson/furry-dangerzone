<% provide(:title, "define") %>
<% provide(:header, "define") %>

<div class="">
  <%= form_tag(search_path, :method => 'get') do %>
    <label class="control-label sr-only" for="inputSuccess5">
      Search
    </label>
    <%= text_field_tag(
      :search, params[:search], placeholder: "Type a word",
      class: "form-control center", id: "inputSuccess5"
    ) %>
    <%= submit_tag "define", name: nil, class: "btn btn-default" %>
  <% end %>
</div>

<% if @query %>
  <% if @search_results.empty? %>
    <p class="lead">
      Sorry, we didn't find '<%= @query %>'. Try again!
    </p>
  <% else @search_results %>
    <% @search_results.each do |word| %>
    <div class="word_partial">
      <div class="pull-right">
        <%= form_for :user_word, url: user_word_path, method: :post do |f| %>
          <%= hidden_field_tag :word_to_be_added, word.name %>
          <%= f.submit class: "btn btn-default btn-sm", value: "add" %>
        <% end %>
      </div>
      <%= render "shared/word", word: word %>
    </div>
    <% end %>
  <% end %>
<% end %>
