<%= form_tag search_results_path(display_button_for: display_button_for),
             method: "get",
             id: "search-form",
             class: "form-inline",
             remote: true do
%>
  <div class="input-group input-group-lg">
    <%= label_tag :'input-search',
                  "Search",
                  class: "form-control-label sr-only"
    %>
    <%= text_field_tag :search,
                       params[:search],
                       type: "search",
                       class: "form-control",
                       id: "input_search",
                       autofocus: true
    %>
    <span class="input-group-btn">
      <%= button_tag type: "submit",
                     class: "btn btn-primary",
                     id: "search-btn" do
      %>
        <i class="fa fa-search"></i>
      <% end %>
    </span>
  </div>
<% end %>
