<div id="search-bar-container">
  <%= form_tag(search_path, method: "get") do %>
    <div class="input-group">
      <%= label_tag :inputSuccess5, "Search", class: "control-label sr-only" %>
      <%= text_field_tag(:search, params[:search], class: "form-control center",
        id: "inputSuccess5") %>
      <span class="input-group-btn">
        <%= submit_tag "look up", name: nil, class: "btn btn-info" %>
      </span>
      <span class="input-group-btn">
        <%= submit_tag "surprise me!", name: nil, class: "btn btn-default" %>
      </span>
    </div>
  <% end %>
</div>
