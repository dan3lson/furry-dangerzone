<% if user_word.jeopardy_completed? %>
		<p class="data-url pointer hover"
			 data-url="<%= jeop_game_link(word.id) %>">
			<%= image_tag(
				"strength2.png",
				alt: "33% Mastered",
				title: "33% Mastered")
			%>
			<br>
			Jeopardy
			<i class="fa fa-check-square-o"></i>
		</p>
<% elsif user_word.jeopardy_not_completed? %>
	<p class="data-url pointer hover"
		 data-url="<%= jeop_game_link(word.id) %>">
		<%= image_tag(
			"strength2.png",
			alt: "33% Mastered",
			title: "33% Mastered")
		%>
		<br>
		Jeopardy
	</p>
<% else %>
	<p class="data-url pointer hover"
		 data-toggle="popover"
		 title="Why is this game locked?"
		 data-content="To activate this Jeoapardy game, you need to
		 							play the Fundamentals for this word first."
		 data-placement="top">
		<%= image_tag(
			"strength2_gray.png",
			alt: "33% Mastered",
			title: "33% Mastered")
		%>
		<br>
		Jeopardy
		<i class="fa fa-lock"></i>
	</p>
<% end %>
