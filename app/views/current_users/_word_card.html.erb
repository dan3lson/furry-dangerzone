<div class="panel panel-default">
	<div class="panel-body">
		<div class="pull-right">
			<%= render "current_users/word_mastery_percentage",
				user_word: UserWord.object(current_user, word),
				word: word
			%>
		</div>
		<span class="basic-black-link">
			<strong class="pointer card-word-name-size"
							data-toggle="modal"
							data-target="#word-<%= word.id %>">
				<%= word.name %>
			</strong>
			<%= render "current_users/word_card_modal", word: word %>
			<br>
			<%= top_three_entries_for(word, "definition").first %>
		</span>
	</div>
</div>
