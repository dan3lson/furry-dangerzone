<%= form_for :user_word_tag,
	url: user_word_tag_path,
	method: :post do |f|
%>
	<%= hidden_field_tag :id, word.id %>
	<%= f.label :tag_id, "Tags", class: "sr-only" %>
	<%= f.collection_select :tag_id,
		unused_tags(current_user, word),
		:id,
		:name,
		{ prompt: "Add a new tag" }
	%>
	<%= f.button class: "btn btn-info btn-block" do %>
		<i class="fa fa-save"></i>
		SAVE
	<% end %>
<% end %>
