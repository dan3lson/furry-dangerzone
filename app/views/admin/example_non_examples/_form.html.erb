<%= form_for([word, e_non_e]) do |f| %>
  <%= render "shared/error_messages", object: e_non_e %>
  <div class="form-group">
    <%= f.label :text,
                class: "sr-only form-control-label" %>
    <%= f.text_area :text,
                     class: "form-control",
                     placeholder: "Text"
    %>
  </div>
  <div class="form-group">
    <%= f.label :answer,
                class: "sr-only form-control-label" %>
    <%= f.text_field :answer,
                     class: "form-control",
                     placeholder: "Answer"
    %>
  </div>
  <div class="form-group">
    <%= f.label :feedback,
                class: "sr-only form-control-label" %>
    <%= f.text_area :feedback,
                     class: "form-control",
                     placeholder: "Feedback"
    %>
  </div>
  <%= f.button "CREATE", type: "submit", class: "btn btn-primary btn-block" %>
<% end %>
