<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>
  <body>
    <%= render "layouts/logged_in_header" %>
    <div class="container">
      <%= render "shared/flash_messages" %>
      <%= yield %>
      <% if logged_in? %>
        <%= render "layouts/logged_in_footer" %>
      <% else %>
      	<div class="center">
          <br/>
          <br/>
          <br/>
      		<small>
      			&copy; Copyright 2015
            <%= link_to "Leksi Education", root_path %>
      		</small>
      	</div>
      <% end %>
      <%= debug(params) if Rails.env.development? %>
    </div>
    <%#= render "shared/google_analytics" %>
  </body>
</html>
