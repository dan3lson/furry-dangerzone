<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>
  
  <body>
    <%= render "sessions/facebook_sdk" %>

    <% if logged_in? %>
      <%= render "layouts/logged_in_header" %>
    <% else %>
      <%= render "layouts/logged_out_header" %>
    <% end %>

    <div class="container">
      <%= render "shared/flash_messages" %>

      <%= yield %>

      <% if logged_in? %>
        <% unless params[:controller] == "games" %>
          <%= render "layouts/logged_in_footer" %>
        <% end %>
      <% end %>

      <%= debug(params) if Rails.env.development? %>
    </div>

    <%= render "layouts/logged_in_footer" %>

    <%= render "shared/google_analytics" %>
    <%= render "shared/script_src" %>
  </body>
</html>
