<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>

<% if params[:controller] == "games" %>
  <body class="games-body-padding">
<% else %>
  <body>
<% end %>
    <%= render "sessions/facebook_sdk" %>

    <% if logged_in? %>
      <% unless params[:controller] == "games" %>
        <%= render "layouts/logged_in_header" %>
      <% end %>
    <% else %>
      <%= render "layouts/logged_out_header" %>
    <% end %>

    <div class="container">
      <%= render "shared/flash_messages" %>

      <%= yield %>

      <% if logged_in? %>
          <%= render "layouts/logged_in_footer" %>
      <% end %>

      <%= debug(params) if Rails.env.development? %>
    </div>

    <%= render "shared/google_analytics" %>

    <%= render "shared/script_src" %>
  </body>
</html>
