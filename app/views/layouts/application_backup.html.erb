                <span class="apple-star-container">
                  <span class="apple-star-orange">
                    &#9733;&#9733;&#9733;&#9733;&#9733;
                  </span> (3,690)
                </span>
              </div>
              <div class="col-xs-6">
                <%=
                  link_to "Free +", signup_path,
                  class: "btn btn-default btn-sm apple-blue-button"
                %>
              </div>
            </div>
          </div>
        </div>
        <div
          class="btn-group btn-group-justified btn-group-margin"
          role="group"
          aria-label="..."
        >
          <div class="btn-group" role="group">
            <%= link_to "Details", "#", class: "btn btn-default active" %>
          </div>
          <div class="btn-group" role="group">
            <%= link_to "Reviews", "#", class: "btn btn-default" %>
          </div>
        </div>
        <hr>
        <div>
