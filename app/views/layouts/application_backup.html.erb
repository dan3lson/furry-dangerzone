<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>
  <body>
    <%= render "shared/flash_error_messages" %>

    <%= render "layouts/logged_in_header" %>
    <% if logged_in? %>
      <div class="container">
        <%= yield %>
      </div>
      <%= render "layouts/logged_in_footer" %>
    <% else %>
      <div class="container">
        <div class="row">
          <div class="col-xs-4 col-sm-3">
            <%=
              image_tag("leksi_icon.png",
              class: "img-responsive",
              alt: "Leksi Icon")
            %>
