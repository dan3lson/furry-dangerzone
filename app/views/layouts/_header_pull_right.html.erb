<span class="pull-right header-buttons">
	<% if params[:controller] == "my_tags" &&
				params[:action] == "index"
	%>
		<%= link_to "New", new_tag_path, id: "my-tags-new-btn" %>

	<% elsif params[:controller] == "my_tags" &&
					 params[:action] == "show"
	%>
		<%= link_to "Edit", edit_tag_path(@tag), id: "my-tags-edit-btn" %>

	<% elsif params[:controller] == "versions" &&
					 params[:action] == "index"
	%>
		<%= link_to "Add", new_version_path %>

	<% elsif params[:controller] == "versions" &&
					 params[:action] == "show"
	%>
		<% if logged_in? && current_user.is_admin? %>
			<%= link_to "Edit", edit_version_path(@version) %>
		<% end %>

	<% elsif params[:controller] == "school/schools" &&
					 params[:action] == "students"
	%>
		<%= link_to school_words_path(filter: @class) do %>
			<i class="fa fa-book white"></i>
		<% end %>

	<% elsif params[:controller] == "searches" &&
					 params[:action] == "search"
	%>
		<i class="fa fa-question-circle-o pointer"
			 data-toggle="modal"
			 data-target="#search-info-guide-modal"></i>
	<% end %>
</span>
