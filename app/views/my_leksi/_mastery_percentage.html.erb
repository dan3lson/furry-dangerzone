<div class="center">
	<% if user_word.freestyle_completed? %>
		<%= image_tag(
			"strength4.png",
			alt: "100% Mastered",
			title: "100% Mastered")
		%>
	<% elsif user_word.fundamental_not_completed? %>
		<%= link_to fund_game_link(word.id) do %>
			<%= image_tag(
				"strength1.png",
				alt: "0% Mastered",
				title: "0% Mastered")
			%>
		<% end %>
	<% elsif user_word.jeopardy_not_completed? %>
		<%= link_to jeop_game_link(word.id) do %>
			<%= image_tag(
				"strength2.png",
				alt: "33% Mastered",
				title: "33% Mastered")
			%>
		<% end %>
	<% elsif user_word.jeopardy_completed? %>
		<%= link_to free_game_link(word.id) do %>
			<%= image_tag(
				"strength3.png",
				alt: "66% Mastered",
				title: "66% Mastered")
			%>
		<% end %>
	<% end %>
</div>
