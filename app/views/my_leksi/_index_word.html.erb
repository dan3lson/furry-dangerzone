<% if user_word.all_freestyles_completed? %>
	<div class="card card-outline-info mb-3">
<% elsif user_word.jeopardy_completed? %>
	<div class="card card-outline-success mb-3">
<% elsif user_word.fundamental_completed? %>
	<div class="card card-outline-warning mb-3">
<% else %>
	<div class="card card-outline-danger mb-3">
<% end %>
	<div class="card-block">
		<div class="float-right">
			<%= render "my_leksi/current_game", user_word: user_word %>
		</div>
		<%= render "words/basics", word: user_word.word %>
		<div class="text-center">
			<%= play_btn_small(user_word, user_word.word.id, user_word.current_game) %>
		</div>
	</div>
</div>
