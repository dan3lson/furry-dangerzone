<div class="panel panel-default">
	<div class="panel-body">
		<div class="lead">
			<i class="fa fa-tag pointer"></i>
			Tags
		</div>
		<% if current_user.has_tags? %>
			<% if tags_exist?(current_user, word) %>
				<% tags_for(current_user, word).each do |tag| %>
					<%= render "my_leksi/tag", tag: tag, word: word %>
				<% end %>
			<% else %>
				<small class="dark-gray">
					This is where you'll see Tags for this word.
				</small>
			<% end %>
			<%= render "my_leksi/tags_form", word: word %>
		<% else %>
			<small class="dark-gray">
				<%= link_to "Create your first tag", new_tag_path %>
				to start organizing your words.
			</small>
		<% end %>
	</div>
</div>
