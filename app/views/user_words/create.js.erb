var created = "<%= @created %>";
var wordID = "<%= @word.id %>";
var $card = $("div").find("[data-word-id='" + wordID + "']");
var $cardBlock = $card.find(".card-block");
var $btnsP = $card.find("p");
$card.find(".alert").remove();

if (created == "true") {
	var $resultsOptions = $("<%= j render(partial: 'searches/results_options', locals: { word: @word }) %>");
	var $linero = createElem("span").append(
		"Success! You earned ",
		createElem("i", "fa fa-money"),
		" 100 Linero."
	);
	$cardBlock.prepend(createFlash("success", $linero));
	$btnsP.html($resultsOptions);
} else {
	var $errorsPartial = $("<%= j render(partial: 'shared/error_messages', locals: { object: @user_word }) %>");
	$card.prepend($errorsPartial);
}

function createFlash(_class, text) {
	return createElem("div", "alert alert-" + _class)
				 .append(text)
				 .attr("role", "alert");
}

function createElem(elem, elemClass, elemID) {
	_class = elemClass || null;
	_id = elemID || null;
	return $("<" + elem + ">", { class: _class, id: _id });
}
