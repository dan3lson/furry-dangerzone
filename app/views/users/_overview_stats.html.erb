<h4>Stats Overview</h4>
<div class="card-deck text-center mb-3">
	<div class="card">
		<div class="card-block">
			<i class="fa fa-trophy"></i>
			<br>
			<%= user.myLeksi_mastery %>%
			myLeksi Mastered
		</div>
	</div>
	<div class="card">
		<div class="card-block">
			<i class="fa fa-clock-o"></i>
			<br>
			<%= user.time_spent_playing %>
			Time Spent Playing (minutes)
		</div>
	</div>
	<div class="card">
		<div class="card-block">
			<i class="fa fa-sign-in"></i>
			<br>
			<%= user.num_logins %>
			Times Logged In
		</div>
	</div>
</div>
