<div class="box-shadow-border zero-padding">
	<h4 class="overview-header">
		Recent Activity
		<small class="float-right">last 24 hours</small>
	</h4>

	<div>
		<% if user.has_recent_activity? %>

			<% if @words_added_last_day.any? %>
				<% @words_added_last_day.each do |uw| %>
					<i class="fa fa-plus-circle fa-2x"></i>
					Added the word <em><%= uw.word.name %></em>
					<br>
				<% end %>
			<% end %>

			<% if @funds_completed_last_day.any? %>
				<div>
					<% @funds_completed_last_day.each do |uw| %>
						<div>
							<div class="d-inline">
								<%= image_tag("medal_red_32.png") %>
							</div>
							&nbsp;
							<div class="d-inline">
								Completed the Fundamentals for <em><%= uw.word.name %></em>
							</div>
						</div>
						<br>
					<% end %>
				</div>
			<% end %>

			<% if @jeops_completed_last_day.any? %>
				<div>
					<% @jeops_completed_last_day.each do |uw| %>
						<div>
							<div class="d-inline">
								<%= image_tag("medal_orange_32.png") %>
							</div>
							&nbsp;
							<div class="d-inline">
								Completed Jeopardy for <em><%= uw.word.name %></em>
							</div>
						</div>
						<br>
					<% end %>
				</div>
			<% end %>

			<% if @frees_completed_last_day.any? %>
				<div>
					<% @frees_completed_last_day.each do |uw| %>
						<div>
							<div class="d-inline">
								<%= image_tag("medal_green_32.png") %>
							</div>
							&nbsp;
							<div class="d-inline">
								Completed Freestyle for <em><%= uw.word.name %></em>
							</div>
						</div>
						<br>
					<% end %>
				</div>
			<% end %>

		<% else %>
			<small class="text-muted">
				None
			</small>
		<% end %>
	</div>
</div>
