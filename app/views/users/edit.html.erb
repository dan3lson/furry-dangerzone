<% provide(:title, "Edit Profile") %>
<% provide(:header, "Edit Profile") %>
<h1>Edit Profile</h1>
<div class="card">
  <%= form_for(@user, url: user_path(@user)) do |f| %>
    <div class="card-body">
      <%= render 'shared/error_messages', object: @user %>
      <fieldset disabled>
        <div class="form-group">
          <%= f.label :username %>
          <%= f.text_field :username, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </fieldset>
    </div>
    <div class="card-body">
      <div class="alert alert-info" role="alert">
        <%= icon "info-circle" %>
        To change your password, enter a new one twice and then click the
        "Save changes" button down below.
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Password Confirmation" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    <div class="card-body">
      <div class="form-group">
        <%= f.label :first_name %> <span class="text-muted">(Optional)</span>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %> <span class="text-muted">(Optional)</span>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
    <div class="card-body">
      <%= f.submit "Save changes", class: "btn btn-primary btn-block" %>
      <div class="text-center mt-5">
        <p>
          <%= link_to "Delete my account", user_path(current_user),
              method: :delete,
              data: { confirm: @del_account_msg },
              class: "btn btn-secondary form-control"
          %>
        </p>
      </div>
    </div>
  <% end %>
</div>
