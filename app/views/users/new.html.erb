<% title "New to Leksi? Sign up." %>
<% description "Give us a try with no need to create a (free) account." %>
<% set_meta_tags keywords: %w[login signup account signin] %>
<% set_meta_tags og: {
  title:    "Sign up to start collecting, organizing, and learning new words.",
	description: "See what the buzz is about with this new vocab app."
} %>
<% set_meta_tags twitter: {
  card: "Learn vocabulary free, without ads or hidden charges. It's simple, fun,
    and based on research.",
  title: "New to Leksi? Sign up.",
  description: "See what the buzz is about with this new vocab app."
} %>

<div>
  <%= form_for(@user, url: :signup) do |f| %>
    <h2>New to Leksi? Sign up.</h2>

    <%= render 'shared/error_messages', object: @user %>

    <div class="form-group">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, class: "form-control",
      placeholder: "Email"  %>
    </div>

    <div class="form-group">
      <%= f.label :username, class: "sr-only" %>
      <%= f.text_field :username, class: "form-control",
        placeholder: "Username"  %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, class: "form-control",
        placeholder: "Password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Password Confirmation",
        class: "sr-only" %>
      <%= f.password_field :password_confirmation, class: "form-control",
        placeholder: "Password Confirmation"  %>
    </div>


    <%= f.submit "Sign Up", class: "btn btn-primary btn-lg btn-block",
      id: "get-started-create-my-acct-btn" %>
  <% end %>

  <br/>

  <div class="text-center">
    Have an account?
    <%= link_to "Log in", login_path %>.
  </div>
</div>
