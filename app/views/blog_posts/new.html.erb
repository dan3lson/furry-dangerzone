<% provide(:header, "New Blog Post") %>

<div class="well">
  <%= form_for(@blog_post) do |f| %>
    <%= render 'shared/error_messages', object: @blog_post %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control", rows: 20  %>
    </div>

    <div class="form-group">
      <%= f.label :icon %>
      <%= f.text_area :icon, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :slug %>
      <%= f.text_field :slug, class: "form-control" %>
    </div>

    <%= f.submit "Create blog", class: "btn btn-default" %>
  <% end %>
</div>
