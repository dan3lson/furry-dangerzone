<% provide(:header, "Edit Blog Post") %>

<div class="well">
  <%= form_for(@blog_post) do |f| %>
    <%= render 'shared/error_messages', object: @blog_post %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control", rows: 20  %>
    </div>

    <div class="form-group">
      <%= f.label :icon %>
      <%= f.text_area :icon, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :slug %>
      <%= f.text_area :slug, class: "form-control" %>
    </div>

    <%= f.submit "Save changes", class: "btn btn-secondary" %>
  <% end %>
</div>

<br>
<br>
<br>
<p>
  <%= link_to "Delete post", blog_post_path(@blog_post),
    method: :delete, class: "btn btn-danger form-control" %>
</p>
