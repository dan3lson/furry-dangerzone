<% if Rails.env.test? %>
  <% if words_for(current_user, @source).count > 0 %>
    <%=
      link_to "remove",
      user_word_source_path(
        source_name: @source.name
      ),
      method: :delete, class: "btn btn-default btn-sm",
      class: "btn btn-default form-control"
    %>
  <% else %>
    <%=
      link_to "remove",
      user_source_path(id: UserSource.find_by(
        user: current_user,
        source: @source).id,
        source_name: @source.name
      ),
      method: :delete, class: "btn btn-default btn-sm",
      class: "btn btn-default form-control"
    %>
  <% end %>
<% else %>
  <% if words_for(current_user, @source).count > 0 %>
    <%=
      link_to image_tag("remove_black_32.png"),
      user_word_source_path(
        source_name: @source.name
      ),
      method: :delete
    %>
  <% else %>
    <%=
      link_to image_tag("remove_black_32.png"),
      user_source_path(id: UserSource.find_by(
        user: current_user,
        source: @source).id,
        source_name: @source.name
      ),
      method: :delete
    %>
  <% end %>
<% end %>
